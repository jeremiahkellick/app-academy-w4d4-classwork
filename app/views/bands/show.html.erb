<h1><%= @band.name %></h1>
<section>
  <a href="<%= bands_url %>">Back</a>
  <a href="<%= edit_band_url(@band) %>">Edit</a>
  <form class="inline-block" action="<%= band_url(@band) %>" method="post">
    <%= auth_token %>
    <input type="hidden" name="_method" value="delete">
    <input class="red" type="submit" value="Delete band">
  </form>
</section>
<h2>Albums</h2>
<section><a href="<%= new_band_album_url(@band) %>">New album</a></section>
<section><%= render @band.albums %></section>
